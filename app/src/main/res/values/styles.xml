<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="editTextBlancoInicioSesion" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/textIcons</item>
        <item name="android:textColorHint">@color/textIcons</item>
        <item name="android:colorPrimary">@color/textIcons</item>
        <item name="android:colorAccent">@color/textIcons</item>
        <item name="android:colorControlNormal">@color/textIcons</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>
        <item name="android:textSize">@dimen/inicioSesionEditText</item>
    </style>

    <style name="editTextBlancoRegistro" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/textIcons</item>
        <item name="android:textColorHint">@color/textIcons</item>
        <item name="android:colorPrimary">@color/textIcons</item>
        <item name="android:colorAccent">@color/textIcons</item>
        <item name="android:colorControlNormal">@color/textIcons</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>
        <item name="android:textSize">@dimen/registroEditText</item>
       <item name="android:layout_marginTop">@dimen/layoutMarginTop10</item>
    </style>

    <style name="tituloRegistro" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/textIcons</item>
        <item name="android:textSize">@dimen/registroTitulo</item>
    </style>

    <style name="registro_boton" parent="Theme.AppCompat.Light">
        <item name="android:text">@string/registro_botonRegistro</item>
        <item name="android:textSize">@dimen/registroBoton</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:colorControlNormal">@color/textIcons</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>
        <item name="android:paddingStart">@dimen/padding20dp</item>
        <item name="android:paddingEnd">@dimen/padding20dp</item>
    </style>

    <style name="cantidadProductos" parent="Theme.AppCompat.Light">
        <item name="android:inputType">number</item>
        <item name="android:maxLength">2</item>
        <item name="android:visibility">invisible</item>
    </style>


</resources>
