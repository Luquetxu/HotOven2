<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialogFondo">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="3"
        android:paddingBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="start"
        android:layout_marginStart="10dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_errordialog_blanco"
            android:layout_marginRight="20dp"
            android:layout_gravity="start"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@string/dialog_datosVacios"
            android:textColor="@color/textIcons"
            android:layout_gravity="start"
            android:id="@+id/dialog_registro_titulo"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/textIcons"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="6"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_datosVaciosConsejo"
            android:layout_marginBottom="15dp"
            android:textColor="@color/textIcons"
            android:textSize="15sp"
            android:id="@+id/dialog_registro_info"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="40dp"/>

    </LinearLayout>

</LinearLayout>